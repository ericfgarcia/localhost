html(lang="en")
    head
        title=pageTitle
        link(href="http://local.com/global/global.css",rel="stylesheet")
        each css in config.views[config.currentView].cssLink
            link(href="http://local.com/#{css}.css",rel="stylesheet")
    body
        div(class="box")
            h1 Path:
                - path.forEach(function(item){
                    - if(item.href!==undefined)
                        a(href="/"+item.href)=item.text
                        /
                    - else
                        span=item.text
                - })
            input#search_input(class='txt',type='text',name='q',style='display:inline;')
            input#search_engine_button(class='btn',type='submit',value='搜索',style='display:inline;')
        #container
            ul
              - list.forEach(function(item){
                li
                    a(href=item.href)=item.text
              - })
        #config-container
            select#switch-views
                each item in Object.keys(config.views)
                    option(value=item)=config.views[item].title
        script(src="http://local.com/global/jquery.js")
        script(src="http://local.com/global/global.js")
        each js in config.views[config.currentView].jsLink
            script(src="http://local.com/#{js}.js")
